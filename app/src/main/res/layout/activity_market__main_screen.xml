<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_market__main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rapturedshadows.gunsquad.Market_MainScreen"
    android:background="@drawable/gunbg"
    >

    <Button
        android:text="Attachments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/assault"
        android:layout_alignLeft="@+id/perks"
        android:layout_alignStart="@+id/perks"
        android:id="@+id/attachments"
        android:layout_x="340dp"
        android:layout_y="50dp"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"
        style="@android:style/Widget.Holo.Button.Inset" />

    <Button
        android:text="Assault Rifles"
        android:id="@+id/assault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sniper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="76dp"
        android:layout_marginStart="76dp"
        android:layout_x="34dp"
        android:layout_y="24dp"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"
        style="@android:style/Widget.Holo.Button.Inset"
        android:elevation="0dp"
        android:textAllCaps="false" />

    <Button
        android:text="Sniper Rifles"
        android:id="@+id/sniper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="40dp"
        android:layout_y="62dp"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"
        style="@android:style/Widget.Holo.Button.Inset" />

    <Button
        android:text="LMG's"
        android:id="@+id/lmg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smg"
        android:layout_toRightOf="@+id/pistols"
        android:layout_toEndOf="@+id/pistols"
        android:layout_x="44dp"
        android:layout_y="102dp"
        style="@android:style/Widget.Holo.Button.Inset"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif" />

    <Button
        android:text="SMG's"
        android:id="@+id/smg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="44dp"
        android:layout_y="142dp"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"
        style="@android:style/Widget.Holo.Button.Inset" />

    <Button
        android:text="Pistols"
        android:id="@+id/pistols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/barracks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="41dp"
        android:layout_y="177dp"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"
        style="@android:style/Widget.Holo.Button.Inset" />

    <Button
        android:text="Back To Barracks"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/barracks"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_x="206dp"
        android:layout_y="220dp"
        android:textColor="@android:color/background_dark"
        android:fontFamily="sans-serif"
        android:textStyle="normal|italic"
        style="@android:style/Widget.Holo.Button.Inset" />

    <Button
        android:text="Perks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sniper"
        android:layout_toLeftOf="@+id/barracks"
        android:layout_toStartOf="@+id/barracks"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:id="@+id/perks"
        android:textColor="@android:color/background_dark"
        android:fontFamily="serif"
        android:layout_x="380dp"
        android:layout_y="102dp"
        style="@android:style/Widget.Holo.Button.Inset" />

</AbsoluteLayout>
